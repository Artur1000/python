lp = True
def setup():
    background("#000000")
    size(800,800)
    
def draw():
    fill(random(0,250),random(10,350),random(10,350))
    circle (random(10,800) , random(10,800) , 10)
def mouseClicked():
    global lp
    if lp:
        lp = False
        noLoop()
    else:
           lp = True
           loop()
