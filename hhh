lst = ["monday","tuesday","Wednesday"]
activeIndex = 0
def setup():
    size(600,600)
    textSize(50)
    
def draw():
    fill("#FA1212")
    global activeIndex
    background(0)
    text(lst[activeIndex], 300,300)

def mouseClicked():
    global activeIndex
    if mouseButton == RIGHT and activeIndex != 2:
        activeIndex += 1
    if mouseButton == LEFT and activeIndex != 0:
        activeIndex -= 1 
            
  
    
